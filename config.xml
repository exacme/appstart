<?xml version='1.0' encoding='utf-8'?>

<widget id="com.exacme.trampoline" version="1.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0" xmlns:android="http://schemas.android.com/apk/res/android">
    <name>Fun Trampoline</name>

    <description>
	Development of a fun trampoline
    </description>
    <author email="" href="http://cordova.io">
    </author>
	<content src="index.html" />
	<access origin="*" />
	<preference name="phonegap-version" value="cli-6.3.0" /> 
	
	<gap:platform name="ios" />
	<gap:platform name="android" />

	<gap:plugin name="cordova-plugin-bluetoothle" source="npm" />
	<gap:plugin name="org.apache.cordova.device" source="npm" version="1.1.2"/>
	<gap:plugin name="org.apache.cordova.console" source="npm" version="1.0.3"/>
	<gap:plugin name="cordova-plugin-statusbar" source="npm"  version="2.1.3"/>
	<gap:plugin name="cordova-plugin-splashscreen" source="npm"  version="3.2.2"/>
	<gap:plugin name="cordova-plugin-whitelist" source="npm" version="1.2.2"/>
	<gap:plugin name="cordova-plugin-geolocation" source="npm"/>
	<plugin name="phonegap-plugin-mobile-accessibility" source="npm" />
	<!-- database plugin --> 
	<plugin name="cordova-sqlite-evcore-extbuild-free" spec="~0.8.1" />
	
	<allow-navigation href="http://sleephat.com/*" /> 
	
	<preference name="StatusBarOverlaysWebView" value="false" />
	<preference name="DisallowOverscroll" value="true"/>  
	<preference name="orientation" value="portrait" />
	<preference name="AutoHideSplashScreen" value="true" />
	<preference name="target-device" value="handset" />
	<preference name="SplashScreen" value="splash" />
	<preference name="SplashMaintainAspectRatio" value="true" />
	<preference name="FadeSplashScreen" value="false"/>
	<preference name="deployment-target" value="7.0" />
	<preference name="android-minSdkVersion" value="18" />
	<preference name="android-targetSdkVersion" value="23" />
	
	<!-- iPhone 6 / 6+ -->
	<icon src="res/icon-180.png" gap:platform="ios" width="180" height="180" />

	<!-- iPhone / iPod Touch  -->
	<icon src="res/icon-60.png" gap:platform="ios" width="60" height="60" />
	<icon src="res/icon-120.png" gap:platform="ios" width="120" height="120" />

	<!-- iPad -->
	<icon src="res/icon-76.png" gap:platform="ios" width="76" height="76" />
	<icon src="res/icon-152.png" gap:platform="ios" width="152" height="152" />

	<!-- Settings Icon -->
	<icon src="res/icon-29.png" gap:platform="ios" width="29" height="29" />
	<icon src="res/icon-58@2x.png" gap:platform="ios" width="58" height="58" />

	<!-- Spotlight Icon -->
	<icon src="res/icon-40.png" gap:platform="ios" width="40" height="40" />
	<icon src="res/icon-80.png" gap:platform="ios" width="80" height="80" />
	
	<!-- iPhone / iPod Touch -->
	<icon src="res/icon-57.png" gap:platform="ios" width="57" height="57" />
	<icon src="res/icon-114.png" gap:platform="ios" width="114" height="114" />

	<!-- iPad -->
	<icon src="res/icon-72.png" gap:platform="ios" width="72" height="72" />
	<icon src="res/icon-144.png" gap:platform="ios" width="144" height="144" />

	<!-- iPad Spotlight and Settings Icon -->
	<icon src="res/icon-50.png" gap:platform="ios" width="50" height="50" />
	<icon src="res/icon-100.png" gap:platform="ios" width="100" height="100" />
	
	<icon src="res/icon.png" />
	
	<gap:splash src="splash.png" />
	<!-- iPhone and iPod touch -->
	<gap:splash src="res/Default.png" gap:platform="ios" width="320" height="480" />
	<gap:splash src="res/Default@2x.png" gap:platform="ios" width="640" height="960" />

	<!-- iPhone 5 / iPod Touch (5th Generation) -->
	<gap:splash src="res/Default-568h@2x.png" gap:platform="ios" width="640" height="1136" />

	<!-- iPhone 6 -->
	<gap:splash src="res/Default-667h@2x.png" gap:platform="ios" width="750" height="1334" />
	<gap:splash src="res/Default-Portrait-736h@3x.png" gap:platform="ios" width="1242" height="2208" />
	<gap:splash src="res/Default-Landscape-736h@3x.png" gap:platform="ios" width="2208" height="1242" />
	
	<gap:splash src="res/ldpi.png" gap:platform="android" gap:qualifier="ldpi" />
	<gap:splash src="res/mdpi.png" gap:platform="android" gap:qualifier="mdpi" />
	<gap:splash src="res/hdpi.png" gap:platform="android" gap:qualifier="hdpi" />
	<gap:splash src="res/xhdpi.png" gap:platform="android" gap:qualifier="xhdpi" />
	
	<feature name="http://api.phonegap.com/1.0/network" />
</widget>
